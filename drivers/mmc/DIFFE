+					CAP_ENDPTPIPEID +
+						mEp->num * sizeof(u32),
+					MSM_PIPE_ID_MASK,
+					mReq->req.udc_priv &
+						MSM_PIPE_ID_MASK);
+		}
+	}
+
+	/* Synchronize to be sure */
+	wmb();
+
