+#ifdef CONFIG_ARCH_SONY_LOIRE_DISABLED
+static inline u32 get_field_value(u32 val, const u32 mask)
+{
+	u32 shift = find_first_bit((void *)&mask, 8);
+
+	val &= mask;		/* clear other bits */
+	val >>= shift;
+	return val;
+}
+#endif
